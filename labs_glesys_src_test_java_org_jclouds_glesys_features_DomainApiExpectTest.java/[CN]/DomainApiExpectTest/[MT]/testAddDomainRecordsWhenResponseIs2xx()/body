{
  DomainApi api=requestSendsResponse(HttpRequest.builder().method("POST").endpoint("https://api.glesys.com/domain/addrecord/format/json").addHeader("Accept","application/json").addHeader("Authorization","Basic aWRlbnRpdHk6Y3JlZGVudGlhbA==").addFormParam("domainname","jclouds.org").addFormParam("type","A").addFormParam("host","jclouds.org").addFormParam("data","").build(),HttpResponse.builder().statusCode(200).payload(payloadFromResourceWithContentType("/domain_record.json",MediaType.APPLICATION_JSON)).build()).getDomainApi();
  assertEquals(api.addRecord("jclouds.org","jclouds.org","A",""),recordInDomainRecord());
