{
  Invokable<?,?> invokable=request.getInvocation().getInvokable();
  OAuthScopes classScopes=request.getEnclosingType().getRawType().getAnnotation(OAuthScopes.class);
  OAuthScopes methodScopes=invokable.getAnnotation(OAuthScopes.class);
  if (classScopes == null && methodScopes == null) {
    checkState(globalScopes != null,String.format("REST class or method should be annotated " + "with OAuthScopes specifying required permissions. Alternatively a global property " + "\"oauth.scopes\" may be set to define scopes globally. REST Class: %s, Method: %s",request.getEnclosingType(),invokable.getName()));
    return globalScopes;
  }
  OAuthScopes scopes=methodScopes != null ? methodScopes : classScopes;
  return Joiner.on(",").join(scopes.value());
}
