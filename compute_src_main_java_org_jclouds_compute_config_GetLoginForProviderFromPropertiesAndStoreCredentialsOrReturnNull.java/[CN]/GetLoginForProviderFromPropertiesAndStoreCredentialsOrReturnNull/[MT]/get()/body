{
  if (credentialStore.containsKey("image"))   return credentialStore.get("image");
  Credentials creds=null;
  String loginUser=config.apply(provider + ".login-user");
  if (loginUser == null)   loginUser=config.apply("jclouds.login-user");
  if (loginUser != null) {
    int pos=loginUser.indexOf(':');
    if (pos != -1) {
      creds=new Credentials(loginUser.substring(0,pos),loginUser.substring(pos + 1));
    }
 else     creds=new Credentials(loginUser,null);
    credentialStore.put("image",creds);
  }
  return creds;
}
