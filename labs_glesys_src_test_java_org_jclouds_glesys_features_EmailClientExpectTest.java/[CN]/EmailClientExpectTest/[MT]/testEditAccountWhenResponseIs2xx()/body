{
  EmailClient client=requestSendsResponse(HttpRequest.builder().method("POST").endpoint("https://api.glesys.com/email/editaccount/format/json").addHeader("Accept","application/json").addHeader("Authorization","Basic aWRlbnRpdHk6Y3JlZGVudGlhbA==").addFormParam("emailaccount","test@jclouds.org").addFormParam("password","anotherpass").build(),HttpResponse.builder().statusCode(200).payload(payloadFromResourceWithContentType("/email_details.json",MediaType.APPLICATION_JSON)).build()).getEmailClient();
  assertEquals(client.editAccount("test@jclouds.org",EditAccountOptions.Builder.password("anotherpass")).toString(),getEmailAccountInDetails().toString());
}
