{
  logger.trace("looking for state on slice %s",checkNotNull(slice,"slice"));
  slice=refresh(slice);
  if (slice == null)   return true;
  logger.trace("%s: looking for slice state %s: currently: %s",slice.getId(),Slice.Status.TERMINATED,slice.getStatus());
  return slice.getStatus() == Slice.Status.TERMINATED;
}
