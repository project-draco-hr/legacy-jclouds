{
  Server currentDetails=null;
  for (currentDetails=connection.getServer(serverId); currentDetails.getStatus() != ServerStatus.ACTIVE; currentDetails=connection.getServer(serverId)) {
    System.out.printf("blocking on status active%n%s%n",currentDetails);
    Thread.sleep(5 * 1000);
  }
  System.out.printf("awaiting daemons to start %n%s%n",currentDetails);
  Thread.sleep(10 * 1000);
}
