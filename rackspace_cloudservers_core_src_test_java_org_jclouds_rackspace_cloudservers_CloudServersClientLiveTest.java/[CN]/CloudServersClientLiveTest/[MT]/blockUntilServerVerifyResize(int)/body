{
  Server currentDetails=null;
  for (currentDetails=connection.getServer(serverId); currentDetails.getStatus() != ServerStatus.VERIFY_RESIZE; currentDetails=connection.getServer(serverId)) {
    System.out.printf("blocking on status verify resize%n%s%n",currentDetails);
    Thread.sleep(5 * 1000);
  }
  System.out.printf("awaiting daemons to  verify resize %n%s%n",currentDetails);
  Thread.sleep(10 * 1000);
}
