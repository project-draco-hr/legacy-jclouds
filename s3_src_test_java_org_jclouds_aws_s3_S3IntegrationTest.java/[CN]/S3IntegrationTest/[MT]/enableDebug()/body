{
  if (debugEnabled()) {
    Handler HANDLER=new ConsoleHandler(){
{
        setLevel(Level.ALL);
        setFormatter(new Formatter(){
          @Override public String format(          LogRecord record){
            return String.format("[%tT %-7s] [%-7s] [%s]: %s %s\n",new Date(record.getMillis()),record.getLevel(),Thread.currentThread().getName(),record.getLoggerName(),record.getMessage(),record.getThrown() == null ? "" : record.getThrown());
          }
        }
);
      }
    }
;
    Logger guiceLogger=Logger.getLogger("org.jclouds");
    guiceLogger.addHandler(HANDLER);
    guiceLogger.setLevel(Level.ALL);
  }
}
