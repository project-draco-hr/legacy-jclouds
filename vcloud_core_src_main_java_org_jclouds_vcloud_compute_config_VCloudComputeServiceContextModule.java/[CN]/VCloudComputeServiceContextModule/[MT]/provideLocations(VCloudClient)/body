{
  return Maps.uniqueIndex(Iterables.transform(client.getDefaultOrganization().getVDCs().values(),new Function<NamedResource,Location>(){
    @Override public Location apply(    NamedResource from){
      VDC vdc=client.getVDC(from.getId());
      return new LocationImpl(LocationScope.ZONE,vdc.getId(),vdc.getName(),null);
    }
  }
),new Function<Location,String>(){
    @Override public String apply(    Location from){
      return from.getId();
    }
  }
);
}
