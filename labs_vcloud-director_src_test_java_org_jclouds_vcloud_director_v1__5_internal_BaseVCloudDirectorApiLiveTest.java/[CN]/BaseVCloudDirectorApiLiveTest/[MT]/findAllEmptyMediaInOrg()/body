{
  vdc=context.getApi().getVdcApi().get(vdc.getId());
  return FluentIterable.from(vdc.getResourceEntities()).filter(ReferencePredicates.<Reference>typeEquals(MEDIA)).transform(new Function<Reference,Media>(){
    @Override public Media apply(    Reference in){
      return context.getApi().getMediaApi().get(in.getHref());
    }
  }
).filter(new Predicate<Media>(){
    @Override public boolean apply(    Media input){
      return input.getSize() == 0;
    }
  }
);
}
