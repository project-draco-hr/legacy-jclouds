{
  checkNotNull(conversion,"conversion");
  try {
    conversion.refresh();
switch (conversion.getState()) {
case ENQUEUED:
      return MonitorStatus.CONTINUE;
case FAILED:
    return MonitorStatus.FAILED;
case FINISHED:
  return MonitorStatus.DONE;
default :
throw new IllegalStateException("Unsupported conversion status");
}
}
 catch (Exception ex) {
logger.warn(ex,"exception thrown while monitoring %s on %s, returning CONTINUE",conversion,getClass().getName());
return MonitorStatus.CONTINUE;
}
}
