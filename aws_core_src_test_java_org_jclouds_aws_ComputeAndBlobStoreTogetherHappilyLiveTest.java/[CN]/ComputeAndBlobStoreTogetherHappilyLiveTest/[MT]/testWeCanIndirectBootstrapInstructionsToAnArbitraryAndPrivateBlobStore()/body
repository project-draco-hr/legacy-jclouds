{
  OperatingSystem defaultOperatingSystem=computeContext.getComputeService().templateBuilder().build().getImage().getOperatingSystem();
  uploadBlob(tag,"openjdk/install",buildScript(defaultOperatingSystem).render(OsFamily.UNIX));
  HttpRequest signedRequestOfInstallScript=blobContext.getSigner().signGetBlob(tag,"openjdk/install");
  Statement installOpenJDK=execHttpResponse(signedRequestOfInstallScript);
  String mavenVersion="3.0-beta-3";
  Statement extractMavenIntoUsrLocal=extractTargzIntoDirectory(URI.create("http://mirrors.ibiblio.org/pub/mirrors/apache//maven/binaries/apache-maven-" + mavenVersion + "-bin.tar.gz"),"/usr/local");
  Statement bootstrapInstructions=newStatementList(installOpenJDK,extractMavenIntoUsrLocal);
  Iterable<? extends NodeMetadata> nodes=computeContext.getComputeService().runNodesWithTag(tag,2,runScript(bootstrapInstructions));
  assertSshOutputOfCommandContains(nodes,"java -version","OpenJDK");
  assertSshOutputOfCommandContains(nodes,"/usr/local/apache-maven-" + mavenVersion + "/bin/mvn -version","Apache Maven " + mavenVersion + "");
}
