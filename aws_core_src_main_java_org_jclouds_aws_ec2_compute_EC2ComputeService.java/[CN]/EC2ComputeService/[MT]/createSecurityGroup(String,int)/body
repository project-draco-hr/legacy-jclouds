{
  logger.debug(">> creating securityGroup name(%s)",name);
  try {
    ec2Client.getSecurityGroupServices().createSecurityGroup(name,name);
    logger.debug("<< created securityGroup(%s)",name);
    logger.debug(">> authorizing securityGroup name(%s) ports(%s)",name,ImmutableSet.of(ports));
    for (    int port : ports) {
      ec2Client.getSecurityGroupServices().authorizeSecurityGroupIngress(name,IpProtocol.TCP,port,port,"0.0.0.0/0");
    }
    logger.debug("<< authorized securityGroup(%s)",name);
  }
 catch (  AWSResponseException e) {
    if (e.getError().getCode().equals("InvalidGroup.Duplicate")) {
      logger.debug("<< reused securityGroup(%s)",name);
    }
 else {
      throw e;
    }
  }
}
