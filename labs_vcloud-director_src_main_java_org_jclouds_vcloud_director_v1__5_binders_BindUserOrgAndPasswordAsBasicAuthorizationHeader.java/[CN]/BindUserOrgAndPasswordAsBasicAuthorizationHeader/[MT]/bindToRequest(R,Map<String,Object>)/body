{
  String header="Basic " + base64().encode(format("%s@%s:%s",checkNotNull(postParams.get("user"),"user"),checkNotNull(postParams.get("org"),"org"),checkNotNull(postParams.get("password"),"password")).getBytes(UTF_8));
  return (R)request.toBuilder().replaceHeader(HttpHeaders.AUTHORIZATION,header).build();
}
