{
  String header="Basic " + CryptoStreams.base64(String.format("%s@%s:%s",checkNotNull(postParams.get("user"),"user"),checkNotNull(postParams.get("org"),"org"),checkNotNull(postParams.get("password"),"password")).getBytes(Charsets.UTF_8));
  return (R)request.toBuilder().replaceHeader(HttpHeaders.AUTHORIZATION,header).build();
}
