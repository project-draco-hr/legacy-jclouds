{
  logger.debug(">> blocking on port %s:%d for %d seconds",inetAddress,port,seconds);
  RetryablePredicate<InetSocketAddress> tester=new RetryablePredicate<InetSocketAddress>(new SocketOpen(),seconds,1,TimeUnit.SECONDS);
  InetSocketAddress socket=new InetSocketAddress(inetAddress,port);
  boolean passed=tester.apply(socket);
  if (passed)   logger.debug("<< port %s:%d opened",inetAddress,port);
 else   logger.warn("<< port %s:%d didn't open after %d seconds",seconds,inetAddress,port);
}
