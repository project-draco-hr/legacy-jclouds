{
  File war=zipFile(explodedWar,format("%s-rhcloud.war",explodedWar),true);
  final String deploymentName=war.getName();
  DeploymentPlan plan=manager.newDeploymentPlan().add(deploymentName,war).andDeploy().build();
  ServerDeploymentPlanResult deploymentResult=manager.execute(plan).get();
  return deploymentResult.getDeploymentActionResult(find(plan.getDeploymentActions(),new Predicate<DeploymentAction>(){
    @Override public boolean apply(    DeploymentAction input){
      return input.getDeploymentUnitUniqueName().equals(deploymentName);
    }
  }
).getId());
}
