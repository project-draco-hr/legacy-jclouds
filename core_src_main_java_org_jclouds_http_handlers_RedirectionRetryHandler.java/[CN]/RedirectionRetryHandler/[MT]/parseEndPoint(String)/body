{
  URI redirectURI=URI.create(hostHeader);
  String scheme=redirectURI.getScheme();
  checkState(redirectURI.getScheme().startsWith("http"),String.format("header %s didn't parse an http scheme: [%s]",hostHeader,scheme));
  int port=redirectURI.getPort() > 0 ? redirectURI.getPort() : redirectURI.getScheme().equals("https") ? 443 : 80;
  String host=redirectURI.getHost();
  checkState(!host.matches("[/]"),String.format("header %s didn't parse an http host correctly: [%s]",hostHeader,host));
  URI endPoint=URI.create(String.format("%s://%s:%d",scheme,host,port));
  return endPoint;
}
