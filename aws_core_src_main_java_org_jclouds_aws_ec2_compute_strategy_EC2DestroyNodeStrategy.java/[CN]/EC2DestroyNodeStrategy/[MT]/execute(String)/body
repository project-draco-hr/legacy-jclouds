{
  String[] parts=parseHandle(handle);
  String region=parts[0];
  String id=parts[1];
  ec2Client.getInstanceServices().terminateInstancesInRegion(region,id);
  return instanceStateTerminated.apply(Iterables.getOnlyElement(Iterables.concat(ec2Client.getInstanceServices().describeInstancesInRegion(region,id))));
}
