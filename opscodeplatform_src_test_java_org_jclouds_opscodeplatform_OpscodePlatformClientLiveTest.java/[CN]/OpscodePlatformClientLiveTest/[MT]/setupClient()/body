{
  orgname=checkNotNull(System.getProperty("jclouds.test.user"),"jclouds.test.user");
  String keyfile=System.getProperty("jclouds.test.key");
  if (keyfile == null || keyfile.equals(""))   keyfile="/etc/chef/validation.pem";
  validatorConnection=createConnection(orgname + "-validator",Files.toString(new File(keyfile),Charsets.UTF_8));
}
