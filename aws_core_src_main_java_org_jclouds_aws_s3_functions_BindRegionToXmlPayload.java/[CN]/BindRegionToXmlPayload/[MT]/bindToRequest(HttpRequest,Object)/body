{
  input=input == null ? defaultRegion : input;
  checkArgument(input instanceof Region,"this binder is only valid for Region!");
  Region constraint=(Region)input;
  String value=null;
switch (constraint) {
case US_STANDARD:
case US_EAST_1:
    return;
case EU_WEST_1:
  value="EU";
break;
case US_WEST_1:
value="us-west-1";
break;
default :
throw new IllegalStateException("unimplemented location: " + this);
}
String payload=String.format("<CreateBucketConfiguration><LocationConstraint>%s</LocationConstraint></CreateBucketConfiguration>",value);
super.bindToRequest(request,payload);
}
