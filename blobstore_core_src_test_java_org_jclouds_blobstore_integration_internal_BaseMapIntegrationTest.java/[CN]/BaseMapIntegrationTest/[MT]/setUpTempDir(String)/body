{
  if (basedir == null) {
    basedir=System.getProperty("java.io.tmpdir");
  }
  tmpDirectory=basedir + File.separator + "target"+ File.separator+ "testFiles"+ File.separator+ getClass().getSimpleName();
  new File(tmpDirectory).mkdirs();
  fiveFiles=ImmutableMap.of("one",new File(tmpDirectory,"apple"),"two",new File(tmpDirectory,"bear"),"three",new File(tmpDirectory,"candy"),"four",new File(tmpDirectory,"dogma"),"five",new File(tmpDirectory,"emma"));
  for (  File file : fiveFiles.values()) {
    IOUtils.write(file.getName(),new FileOutputStream(file));
  }
}
