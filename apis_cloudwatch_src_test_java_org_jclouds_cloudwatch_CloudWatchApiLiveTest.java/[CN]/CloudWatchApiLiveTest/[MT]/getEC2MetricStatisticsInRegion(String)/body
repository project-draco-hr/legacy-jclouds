{
  Calendar cal=Calendar.getInstance();
  cal.add(Calendar.MINUTE,-60 * 24 * 3);
  Set<Datapoint> datapoints=api.getMetricStatisticsInRegion(region,"CPUUtilization","AWS/EC2",cal.getTime(),new Date(),180,Statistics.AVERAGE,GetMetricStatisticsOptions.Builder.unit(Unit.PERCENT));
  return checkNotNull(datapoints,"Got null response for EC2 datapoints in region ");
}
