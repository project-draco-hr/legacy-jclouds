{
  OperatingSystemSection newSection=OperatingSystemSection.builder().info("").id(OSType.RHEL_64.getCode()).osType("rhel5_64Guest").build();
  Task editOperatingSystemSection=vmApi.editOperatingSystemSection(vm.getHref(),newSection);
  assertTrue(retryTaskSuccess.apply(editOperatingSystemSection),String.format(TASK_COMPLETE_TIMELY,"editOperatingSystemSection"));
  OperatingSystemSection modified=vmApi.getOperatingSystemSection(vm.getHref());
  checkOperatingSystemSection(modified);
  assertEquals(modified.getId(),newSection.getId());
}
