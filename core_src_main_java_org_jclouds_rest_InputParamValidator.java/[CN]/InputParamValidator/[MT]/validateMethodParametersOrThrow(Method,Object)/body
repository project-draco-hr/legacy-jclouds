{
  if (!passesMethodValidation(method,args) || !passesParameterValidation(method.getParameterAnnotations(),args)) {
    String argsString=Iterables.toString(Arrays.asList(args));
    throw new IllegalArgumentException(String.format("Validation on '%s#%s' didn't pass for arguments: " + "%s",method.getDeclaringClass().getName(),method.getName(),argsString));
  }
}
