{
  try {
    performMethodValidation(checkNotNull(method,"method"),args);
    performParameterValidation(method.getParameters(),args);
  }
 catch (  IllegalArgumentException e) {
    throw new IllegalArgumentException(String.format("Validation on '%s#%s' didn't pass for arguments: " + "%s. %n Reason: %s.",method.getDeclaringClass().getName(),method.getName(),args,e.getMessage()));
  }
}
