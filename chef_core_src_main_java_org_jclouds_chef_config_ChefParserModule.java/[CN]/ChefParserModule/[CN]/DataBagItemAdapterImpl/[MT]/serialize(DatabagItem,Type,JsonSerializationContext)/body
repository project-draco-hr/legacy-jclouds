{
  String text=src.toString();
  try {
    IdHolder idHolder=json.fromJson(text,IdHolder.class);
    if (idHolder.id == null)     text=text.replaceFirst("\\{",String.format("{\"id\":\"%s\",",src.getId()));
 else     checkArgument(src.getId().equals(idHolder.id),"incorrect id in databagItem text, should be %s: was %s",src.getId(),idHolder.id);
    return new JsonLiteral(text);
  }
 catch (  JsonParseException e) {
    throw new IllegalArgumentException(String.format("databag item must be a json hash ex. {\"id\":\"item1\",\"my_key\":\"my_data\"}; was %s",text),e);
  }
}
