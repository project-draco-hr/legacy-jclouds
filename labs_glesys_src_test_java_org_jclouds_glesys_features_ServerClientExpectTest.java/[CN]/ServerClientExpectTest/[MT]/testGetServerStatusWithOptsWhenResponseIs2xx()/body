{
  ServerClient client=requestSendsResponse(HttpRequest.builder().method("POST").endpoint("https://api.glesys.com/server/status/format/json").addHeader("Accept","application/json").addHeader("Authorization","Basic aWRlbnRpdHk6Y3JlZGVudGlhbA==").addFormParam("serverid","server321").addFormParam("statustype","state").build(),HttpResponse.builder().statusCode(206).payload(payloadFromResource("/server_status.json")).build()).getServerClient();
  assertEquals(client.getServerStatus("server321",ServerStatusOptions.Builder.state()),expectedServerStatus());
}
