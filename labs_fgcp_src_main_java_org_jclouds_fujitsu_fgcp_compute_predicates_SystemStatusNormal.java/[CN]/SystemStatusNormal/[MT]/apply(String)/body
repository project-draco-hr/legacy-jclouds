{
  logger.trace("looking for status on system %s",systemId);
  VSystemStatus status=api.getVirtualSystemApi().getStatus(systemId);
  logger.trace("looking for status on system %s: currently: %s",systemId,status);
  if (status == VSystemStatus.ERROR)   throw new IllegalStateException("system in error: " + status);
  return status == VSystemStatus.NORMAL;
}
