{
  DataBag databag=DataBag.builder().name("foo").item("item","{\"foo\":\"bar\"}").build();
  String script=ChefSolo.builder().cookbooksArchiveLocation("/tmp/cookbooks").defineDataBag(databag).installRecipe("apache2").build().render(OsFamily.UNIX);
  assertEquals(script,Resources.toString(Resources.getResource("test_install_ruby." + ShellToken.SH.to(OsFamily.UNIX)),Charsets.UTF_8) + "installChefGems || return 1\nmkdir -p /var/chef\n" + "mkdir -p /var/chef/data_bags\nmkdir -p /var/chef/data_bags/foo\n"+ "cat > /var/chef/data_bags/foo/item.json <<-'END_OF_JCLOUDS_FILE'\n"+ "\t{\"foo\":\"bar\"}\nEND_OF_JCLOUDS_FILE\n"+ "chef-solo -N `hostname` -r /tmp/cookbooks -o recipe[apache2]\n");
}
