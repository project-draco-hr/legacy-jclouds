{
  DomainClient client=requestSendsResponse(HttpRequest.builder().method("POST").endpoint("https://api.glesys.com/domain/updaterecord/format/json").addHeader("Accept","application/json").addHeader("Authorization","Basic aWRlbnRpdHk6Y3JlZGVudGlhbA==").addFormParam("recordid","256151").addFormParam("host","somehost").addFormParam("ttl","1800").build(),HttpResponse.builder().statusCode(200).payload(payloadFromResourceWithContentType("/domain_record.json",MediaType.APPLICATION_JSON)).build()).getDomainClient();
  assertEquals(client.editRecord("256151",EditRecordOptions.Builder.host("somehost"),EditRecordOptions.Builder.ttl(1800)),recordInDomainRecord());
}
