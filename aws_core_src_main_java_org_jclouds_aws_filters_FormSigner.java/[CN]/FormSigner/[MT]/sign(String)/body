{
  String signature;
  try {
    signature=encryptionService.base64(encryptionService.hmacSha256(stringToSign,secretKey.getBytes()));
    if (signatureWire.enabled())     signatureWire.input(Utils.toInputStream(signature));
  }
 catch (  Exception e) {
    throw new HttpException("error signing request",e);
  }
  return signature;
}
