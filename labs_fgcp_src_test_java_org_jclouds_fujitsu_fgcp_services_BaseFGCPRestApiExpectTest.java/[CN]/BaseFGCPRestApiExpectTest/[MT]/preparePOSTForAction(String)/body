{
  return HttpRequest.builder().method("POST").endpoint(URI.create("https://api.globalcloud.fujitsu.com.au/ovissapi/endpoint")).payload(payloadFromResourceWithContentType("/" + action.toLowerCase() + "-request.xml",MediaType.TEXT_XML)).headers(ImmutableMultimap.<String,String>builder().put("Accept","text/xml").put("User-Agent","OViSS-API-CLIENT").build()).build();
}
