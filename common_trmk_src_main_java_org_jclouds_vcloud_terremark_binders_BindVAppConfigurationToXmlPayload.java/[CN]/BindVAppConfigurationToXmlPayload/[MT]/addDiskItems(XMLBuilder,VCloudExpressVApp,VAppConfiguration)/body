{
  for (  ResourceAllocationSettingData disk : filter(vApp.getResourceAllocations(),CIMPredicates.resourceTypeIn(ResourceType.DISK_DRIVE))) {
    if (!configuration.getDisksToDelete().contains(disk.getAddressOnParent()))     addDiskWithQuantity(sectionBuilder,disk);
  }
  for (  Long quantity : configuration.getDisks()) {
    ResourceAllocationSettingData disk=ResourceAllocationSettingData.builder().instanceID("9").elementName("n/a").resourceType(ResourceType.DISK_DRIVE).virtualQuantity(quantity).build();
    addDiskWithQuantity(sectionBuilder,disk);
  }
}
