{
  PublicIpAddress ip;
  if (tmClient instanceof TerremarkVCloudExpressClient) {
    is=TerremarkVCloudExpressClient.class.cast(tmClient).addInternetServiceToVDC(tmClient.findVDCInOrgNamed(null,null).getId(),"SSH",Protocol.TCP,22);
    ip=is.getPublicIpAddress();
  }
 else {
    ip=TerremarkECloudClient.class.cast(tmClient).activatePublicIpInVDC(tmClient.findVDCInOrgNamed(null,null).getId());
    is=tmClient.addInternetServiceToExistingIp(ip.getId(),"SSH",Protocol.TCP,22);
  }
  publicIp=ip.getAddress();
}
