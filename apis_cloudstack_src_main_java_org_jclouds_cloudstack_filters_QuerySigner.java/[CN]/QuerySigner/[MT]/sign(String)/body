{
  String signature;
  try {
    ByteProcessor<byte[]> hmacSHA1=asByteProcessor(crypto.hmacSHA1(secretKey.getBytes()));
    signature=base64().encode(readBytes(toInputStream(toSign),hmacSHA1));
    if (signatureWire.enabled())     signatureWire.input(toInputStream(signature));
    return signature;
  }
 catch (  InvalidKeyException e) {
    throw propagate(e);
  }
catch (  IOException e) {
    throw propagate(e);
  }
}
