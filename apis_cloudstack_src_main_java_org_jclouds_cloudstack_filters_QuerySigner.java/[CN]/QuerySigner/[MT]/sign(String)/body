{
  String signature;
  try {
    signature=base64(mac(InputSuppliers.of(stringToSign),crypto.hmacSHA1(secretKey.getBytes())));
    if (signatureWire.enabled())     signatureWire.input(toInputStream(signature));
    return signature;
  }
 catch (  InvalidKeyException e) {
    throw propagate(e);
  }
catch (  IOException e) {
    throw propagate(e);
  }
}
