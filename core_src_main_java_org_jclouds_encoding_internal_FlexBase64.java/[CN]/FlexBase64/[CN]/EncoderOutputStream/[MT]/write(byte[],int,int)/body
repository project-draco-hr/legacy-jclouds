{
  byte[] buffer=this.buffer;
  Encoder encoder=this.encoder;
  int pos=this.pos;
  int limit=off + len;
  int ipos=off;
  while (ipos < limit) {
    pos=encoder.encode(b,ipos,limit,buffer,pos,buffer.length);
    int last=encoder.getLastInputPosition();
    if (last == ipos || pos >= buffer.length) {
      output.write(buffer,0,pos);
      pos=0;
    }
    ipos=last;
  }
  this.pos=pos;
}
