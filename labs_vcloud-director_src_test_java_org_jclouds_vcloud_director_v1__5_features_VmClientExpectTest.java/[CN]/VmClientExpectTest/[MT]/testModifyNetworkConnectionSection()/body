{
  VCloudDirectorClient client=requestsSendResponses(loginRequest,sessionResponse,new VcloudHttpRequestPrimer().apiCommand("PUT",vmId + "/networkConnectionSection").xmlFilePayload("/vApp/modifyNetworkConnectionSection.xml",VCloudDirectorMediaType.NETWORK_CONNECTION_SECTION).acceptAnyMedia().httpRequestBuilder().build(),new VcloudHttpResponsePrimer().xmlFilePayload("/vApp/modifyNetworkConnectionSectionTask.xml",VCloudDirectorMediaType.TASK).httpResponseBuilder().build());
  NetworkConnectionSection section=getNetworkConnectionSection().toBuilder().build();
  Task expected=modifyNetworkConnectionSectionTask();
  assertEquals(client.getVmClient().modifyNetworkConnectionSection(vmURI,section),expected);
}
