{
  NodeMetadata node=null;
  int i=0;
  while (node == null && i++ < 3) {
    try {
      node=getNodeMetadata.execute(resource.getId().toASCIIString());
      nodes.add(node);
    }
 catch (    NullPointerException e) {
      logger.warn("vApp %s not yet present in vdc %s",resource.getName(),vdc.getName());
    }
  }
}
