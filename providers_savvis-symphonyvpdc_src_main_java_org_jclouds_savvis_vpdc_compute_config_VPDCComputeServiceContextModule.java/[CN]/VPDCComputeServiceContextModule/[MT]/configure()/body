  }
).to(VMSpecToHardware.class);
  bind(new TypeLiteral<Function<Network,Location>>(){
  }
).to(NetworkToLocation.class);
  bind(new TypeLiteral<Supplier<Location>>(){
  }
).to(FirstNetwork.class);
}
