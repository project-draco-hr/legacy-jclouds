{
  String message=errorParser.apply(response);
  Exception exception=new HttpResponseException(command,response,message);
  try {
    message=message != null ? message : String.format("%s -> %s",command.getRequest().getRequestLine(),response.getStatusLine());
switch (response.getStatusCode()) {
case 401:
case 403:
      exception=new AuthorizationException(message,exception);
    break;
case 404:
  if (!command.getRequest().getMethod().equals("DELETE")) {
    exception=new ResourceNotFoundException(message,exception);
  }
break;
}
}
  finally {
if (response.getPayload() != null) Closeables.closeQuietly(response.getPayload().getInput());
command.setException(exception);
}
}
