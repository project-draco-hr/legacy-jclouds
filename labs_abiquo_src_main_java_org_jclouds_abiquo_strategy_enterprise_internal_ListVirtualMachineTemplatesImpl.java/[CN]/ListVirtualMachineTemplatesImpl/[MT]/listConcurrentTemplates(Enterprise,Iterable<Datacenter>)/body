{
  Iterable<VirtualMachineTemplatesDto> templates=transformParallel(dcs,new Function<Datacenter,Future<? extends VirtualMachineTemplatesDto>>(){
    @Override public Future<VirtualMachineTemplatesDto> apply(    final Datacenter input){
      return context.getAsyncApi().getVirtualMachineTemplateApi().listVirtualMachineTemplates(parent.getId(),input.getId());
    }
  }
,userExecutor,maxTime,logger,"getting virtual machine templates");
  return DomainWrapper.join(templates);
}
