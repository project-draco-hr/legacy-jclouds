{
  Iterable<User> users=Iterables.concat(context.getApi().getAccountClient().listAccounts());
  Predicate<User> apiKeyMatches=UserPredicates.apiKeyEquals(context.getIdentity());
  User currentUser;
  try {
    currentUser=Iterables.find(users,apiKeyMatches);
  }
 catch (  NoSuchElementException e) {
    throw new NoSuchElementException(String.format("none of the following users match %s: %s",apiKeyMatches,users));
  }
  if (currentUser.getAccountType() != type)   throw new IllegalArgumentException(String.format("invalid account type: %s, please specify an apiKey of %s, for example: %s",currentUser.getAccountType(),type,Iterables.filter(users,UserPredicates.accountTypeEquals(type))));
  return currentUser;
}
