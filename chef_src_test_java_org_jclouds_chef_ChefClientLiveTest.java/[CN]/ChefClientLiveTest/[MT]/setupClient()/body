{
  username=checkNotNull(System.getProperty("jclouds.test.user"),"jclouds.test.user");
  String keyfile=System.getProperty("jclouds.test.key");
  if (keyfile == null || keyfile.equals(""))   keyfile=System.getProperty("user.home") + "/chef/client.pem";
  client=ChefContextFactory.createContext(username,Files.toString(new File(keyfile),Charsets.UTF_8),new Log4JLoggingModule()).getApi();
}
