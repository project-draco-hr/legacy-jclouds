{
  Map<Integer,Set<Annotation>> indexToEntityAnnotation=Maps.filterValues(toRefine.get(method),new Predicate<Set<Annotation>>(){
    public boolean apply(    Set<Annotation> input){
      return input.size() == 1;
    }
  }
);
  if (indexToEntityAnnotation.size() > 1) {
    throw new IllegalStateException(String.format("You must not specify more than one %s annotation on: %s; found %s",description,method.toString(),indexToEntityAnnotation));
  }
  return indexToEntityAnnotation;
}
