{
  int count=currentSessionFailures.getAndIncrement();
  logger.warn("%1s->%2s[%3s] - SessionRequest failed",request.getLocalAddress(),request.getRemoteAddress(),request.getAttachment());
  releaseConnectionAndSetResponseException(request,request.getException());
  if (count >= maxSessionFailures) {
    logger.error(request.getException(),"%1s->%2s[%3s] - SessionRequest failures: %4s, Disabling pool for %5s",request.getLocalAddress(),request.getRemoteAddress(),maxSessionFailures,target);
    exception.set(request.getException());
  }
}
