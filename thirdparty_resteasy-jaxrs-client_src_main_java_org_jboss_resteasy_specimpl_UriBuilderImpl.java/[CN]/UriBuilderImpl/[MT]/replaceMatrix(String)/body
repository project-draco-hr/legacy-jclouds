{
  if (!matrix.startsWith(";"))   matrix=";" + matrix;
  if (path == null) {
    path=matrix;
  }
 else {
    int start=path.lastIndexOf('/');
    if (start < 0)     start=0;
    int matrixIndex=path.indexOf(';',start);
    if (matrixIndex > -1)     path=path.substring(0,matrixIndex) + matrix;
 else     path+=matrix;
  }
  return this;
}
