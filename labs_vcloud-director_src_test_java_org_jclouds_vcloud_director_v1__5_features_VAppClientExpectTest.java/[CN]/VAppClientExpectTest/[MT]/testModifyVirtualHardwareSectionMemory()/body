{
  VCloudDirectorClient client=requestsSendResponses(loginRequest,sessionResponse,new VcloudHttpRequestPrimer().apiCommand("PUT",vAppId + "/virtualHardwareSection/memory").xmlFilePayload("/vApp/modifyVirtualHardwareSectionMemory.xml",VCloudDirectorMediaType.VAPP).acceptAnyMedia().httpRequestBuilder().build(),new VcloudHttpResponsePrimer().xmlFilePayload("/vApp/modifyVirtualHardwareSectionMemoryTask.xml",VCloudDirectorMediaType.TASK).httpResponseBuilder().build());
  ResourceAllocationSettingData memory=getVirtualHardwareSectionCpu();
  Task expected=modifyVirtualHardwareSectionMemoryTask();
  assertEquals(client.getVAppClient().modifyVirtualHardwareSectionMemory(vAppURI,memory),expected);
}
