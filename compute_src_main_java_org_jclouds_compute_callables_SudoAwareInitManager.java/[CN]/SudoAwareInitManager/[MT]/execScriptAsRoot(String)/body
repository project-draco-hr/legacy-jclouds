{
  String command;
  if (node.getCredentials().identity.equals("root")) {
    command="./" + init.getInstanceName() + " "+ action;
  }
 else   if (node.getCredentials().shouldAuthenticateSudo()) {
    command=String.format("echo '%s'|sudo -S ./%s %s",node.getCredentials().getPassword(),init.getInstanceName(),action);
  }
 else {
    command="sudo ./" + init.getInstanceName() + " "+ action;
  }
  return command;
}
