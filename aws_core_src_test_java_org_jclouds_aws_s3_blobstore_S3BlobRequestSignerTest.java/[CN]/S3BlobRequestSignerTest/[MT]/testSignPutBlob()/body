{
  Blob blob=blobFactory.create(null);
  blob.getMetadata().setName("name");
  blob.setPayload(new PhantomPayload(2l,new byte[]{0,2,4,8}));
  blob.getPayload().setContentType("text/plain");
  HttpRequest request=signer.signPutBlob("container",blob);
  assertRequestLineEquals(request,"PUT https://container.s3.amazonaws.com/name HTTP/1.1");
  assertNonPayloadHeadersEqual(request,"Authorization: AWS identity:j9Dy/lmmvlCKjA4lkqZenLxMkR4=\nDate: Thu, 05 Jun 2008 16:38:19 GMT\nHost: container.s3.amazonaws.com\n");
  assertContentHeadersEqual(request,"text/plain",null,null,null,(long)2l,new byte[]{0,2,4,8});
  assertEquals(request.getFilters().size(),0);
}
