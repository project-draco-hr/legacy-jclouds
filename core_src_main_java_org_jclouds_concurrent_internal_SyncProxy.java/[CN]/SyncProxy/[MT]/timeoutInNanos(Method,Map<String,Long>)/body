{
  String className=declaring.getSimpleName();
  Optional<Long> timeoutMillis=fromNullable(timeouts.get(className + "." + method.getName())).or(fromNullable(timeouts.get(className))).or(fromNullable(timeouts.get("default")));
  if (timeoutMillis.isPresent())   return Optional.of(TimeUnit.MILLISECONDS.toNanos(timeoutMillis.get()));
  return Optional.absent();
}
