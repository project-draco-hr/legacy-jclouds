{
  logger.trace("looking for state on slice %s",checkNotNull(slice,"slice"));
  slice=refresh(slice);
  if (slice == null)   return false;
  logger.trace("%s: looking for slice state %s: currently: %s",slice.getId(),Slice.Status.ACTIVE,slice.getStatus());
  return slice.getStatus() == Slice.Status.ACTIVE;
}
