{
  NodeMetadata node=nodes.get(id);
  if (node == null)   throw new ResourceNotFoundException("node not found: " + id);
  if (node.getState() == NodeState.RUNNING)   return;
  if (node.getState() != NodeState.SUSPENDED)   throw new IllegalStateException("to resume a node, it must be in suspended state, not: " + node.getState());
  setStateOnNode(NodeState.PENDING,node);
  setStateOnNodeAfterDelay(NodeState.RUNNING,node,50);
}
