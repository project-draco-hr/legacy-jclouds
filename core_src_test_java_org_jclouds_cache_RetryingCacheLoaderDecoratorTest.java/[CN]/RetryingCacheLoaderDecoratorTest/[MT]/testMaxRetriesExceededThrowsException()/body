{
  CacheLoader<String,Boolean> backoff=RetryingCacheLoaderDecorator.newDecorator().on(ResourceNotFoundException.class).exponentiallyBackoff().decorate(mock);
  expect(mock.load("foo")).andThrow(new ResourceNotFoundException()).times(5);
  replay(mock);
  try {
    backoff.load("foo");
    assertTrue(false);
  }
 catch (  ResourceNotFoundException e) {
  }
  verify(mock);
}
