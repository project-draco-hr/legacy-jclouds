{
  securityGroupName=serverPrefix + "ingress";
  try {
    client.getSecurityGroupServices().deleteSecurityGroup(securityGroupName);
  }
 catch (  Exception e) {
  }
  client.getSecurityGroupServices().createSecurityGroup(securityGroupName,securityGroupName);
  client.getSecurityGroupServices().authorizeSecurityGroupIngress(securityGroupName,IpProtocol.TCP,80,80,"0.0.0.0/0");
  client.getSecurityGroupServices().authorizeSecurityGroupIngress(securityGroupName,IpProtocol.TCP,443,443,"0.0.0.0/0");
  client.getSecurityGroupServices().authorizeSecurityGroupIngress(securityGroupName,IpProtocol.TCP,22,22,"0.0.0.0/0");
}
