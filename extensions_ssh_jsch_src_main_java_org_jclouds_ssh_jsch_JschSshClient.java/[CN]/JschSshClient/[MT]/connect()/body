{
  disconnect();
  Exception e=null;
  RETRY_LOOP:   for (int i=0; i < sshRetries; i++) {
    try {
      newSession();
      e=null;
      break RETRY_LOOP;
    }
 catch (    Exception from) {
      e=from;
      disconnect();
      if (i == sshRetries)       throw propagate(from);
      if (shouldRetry(from)) {
        backoffForAttempt(i + 1,from.getMessage());
        continue;
      }
      throw propagate(from);
    }
  }
  if (e != null)   throw propagate(e);
}
