{
  logger.trace("looking for state on instance %s",checkNotNull(instance,"instance"));
  instance=refresh(instance);
  if (instance == null || instance.getState() == Instance.State.FINISH)   return false;
  logger.trace("%s: looking for instance state %s: currently: %s",instance.getId(),getState(),instance.getState());
  return instance.getState() == getState();
}
