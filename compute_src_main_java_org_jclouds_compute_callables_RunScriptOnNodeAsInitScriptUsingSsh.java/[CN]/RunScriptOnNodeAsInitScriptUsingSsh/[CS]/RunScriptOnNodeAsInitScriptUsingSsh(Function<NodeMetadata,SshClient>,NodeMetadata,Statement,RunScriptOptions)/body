{
  this.sshFactory=checkNotNull(sshFactory,"sshFactory");
  this.node=checkNotNull(node,"node");
  String name=options.getTaskName();
  if (name == null) {
    if (checkNotNull(script,"script") instanceof InitBuilder)     name=InitBuilder.class.cast(script).getInstanceName();
 else     name="jclouds-script-" + System.currentTimeMillis();
  }
  this.init=checkNotNull(script,"script") instanceof InitBuilder ? InitBuilder.class.cast(script) : createInitScript(name,script);
  this.initFile=String.format(initScriptPattern,name);
  this.runAsRoot=options.shouldRunAsRoot();
}
