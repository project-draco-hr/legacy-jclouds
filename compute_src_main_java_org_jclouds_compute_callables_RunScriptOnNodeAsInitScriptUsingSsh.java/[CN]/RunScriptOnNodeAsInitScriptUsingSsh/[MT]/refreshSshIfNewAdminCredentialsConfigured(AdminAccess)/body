{
  if (input.getAdminCredentials() != null && input.shouldGrantSudoToAdminUser()) {
    ssh.disconnect();
    logger.debug(">> reconnecting as %s@%s",input.getAdminCredentials().identity,ssh.getHostAddress());
    ssh=sshFactory.apply(node=NodeMetadataBuilder.fromNodeMetadata(node).adminPassword(null).credentials(input.getAdminCredentials()).build());
    ssh.connect();
    setupLinkToInitFile();
  }
}
