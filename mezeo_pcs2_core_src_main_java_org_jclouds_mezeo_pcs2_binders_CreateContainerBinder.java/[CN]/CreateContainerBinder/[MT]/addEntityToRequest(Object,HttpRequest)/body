{
  String container=String.format("<container><name>%s</name></container>",toBind);
  request.setEntity(container);
  request.getHeaders().replaceValues(HttpHeaders.CONTENT_LENGTH,Collections.singletonList(container.getBytes().length + ""));
  request.getHeaders().replaceValues(HttpHeaders.CONTENT_TYPE,Collections.singletonList("application/vnd.csp.container-info+xml"));
}
