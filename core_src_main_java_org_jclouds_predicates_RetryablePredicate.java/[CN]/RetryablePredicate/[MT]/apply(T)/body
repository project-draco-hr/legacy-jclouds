{
  try {
    long i=1l;
    for (Date end=new Date(System.currentTimeMillis() + maxWait); before(end); Thread.sleep(nextMaxInterval(i++,end))) {
      if (predicate.apply(input)) {
        return true;
      }
 else       if (atOrAfter(end)) {
        return false;
      }
    }
  }
 catch (  InterruptedException e) {
    logger.warn(e,"predicate %s on %s interrupted, returning false",input,predicate);
  }
catch (  RuntimeException e) {
    ExecutionException exec=Throwables2.getFirstThrowableOfType(e,ExecutionException.class);
    if (exec != null)     logger.warn(exec,"predicate %s on %s error, returning false",input,predicate);
 else     throw e;
  }
  return false;
}
