{
  HostAdministrationApi api=requestsSendResponses(keystoneAuthWithUsernameAndPasswordAndTenantName,responseWithKeystoneAccess,extensionsOfNovaRequest,extensionsOfNovaResponse,HttpRequest.builder().method("GET").endpoint("https://az-1.region-a.geo-1.compute.hpcloudsvc.com/v1.1/3456/os-hosts/ubuntu/shutdown").addHeader("Accept","application/json").addHeader("X-Auth-Token",authToken).build(),HttpResponse.builder().statusCode(200).payload(payloadFromStringWithContentType("{\"host\":\"ubuntu\",\"power_action\":\"shutdown\"}",MediaType.APPLICATION_JSON)).build()).getHostAdministrationExtensionForZone("az-1.region-a.geo-1").get();
  assertTrue(api.shutdown("ubuntu"));
}
